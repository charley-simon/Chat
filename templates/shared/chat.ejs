<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mon application de Chat</title>
    <link rel="stylesheet" href="./css/bootstrap.min.css">
    <script src="./js/bootstrap.bundle.min.js" defer></script></head>
<body>
<!--
    userName: <%= locals.userName ?? 'Null' %>
    userID: <%= locals.userID %>
    userAvatar: <%= locals.userAvatar %>
    user: <%= locals.user %>
-->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">

            <div name="<%= locals.user.name %>" 
                 id="User_<%= locals.user.id %>" 
                 class="card text-white <%= locals.user.chatColor %> px-0 py-0 mx-2 my-2" 
                 style="max-width: 30rem;">
                <div class="card-header">
                    <img src="images/<%= locals.user.avatar %>" height="28" class="float-start pe-2" alt="Avatar"/>
                    <h5 class="card-title mx-0 my-0 px-0 py-0"><%= locals.user.name %></h5>
                </div>
                <div class="card-body mx-0 my-0 px-0 py-0" style="overflow-y: scroll; height: 200px">
                    <table class="table table-responsive table-borderless table-dark table-sm my-0 py-0" 
                           style="width:100%; height:100%;">
                        <th style="width:5%;"></th>
                        <th style="width:95%;"></th>
                        <tbody>
                            <% for (const msg of locals.messages) { %>
                                <% let userItem = users[msg.from] %>
                                <tr>
                                    <td style="padding-block:0" class="<%= userItem.msgColor %>"><%= userItem.name %>:</td>
                                    <td style="padding-block:0" class="<%= userItem.msgColor %>"><%= msg.msg %></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <form action="" method="post" name="sendForm_<%= locals.user.id %>" id="sendForm_<%= locals.user.id %>">
                        <div class="input-group">
                            <input type="hidden" id="user" name="user" value="<%= locals.user.id %>" />
                            <input type="search" name="message" id="message" placeholder="Ecrivez votre message" class="form-control" value="Un nouveau message">
                            <button type="submit" class="btn btn-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5"/>
                                </svg>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>